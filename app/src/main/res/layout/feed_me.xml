<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/feedMeMain">

    <Button
        android:id="@+id/feedMeButton"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="FEED ME!"
        android:textSize="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_marginTop="5sp"
        android:id="@+id/monsterImage"
        android:layout_below="@id/feedMeButton"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_launcher"
    />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lvl 1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/monsterImage"
        android:layout_marginBottom="5dp"/>
     <RelativeLayout
         android:layout_below="@id/level"
         android:id="@+id/RelativeProgress"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true">


    <ProgressBar
        android:layout_marginTop="5sp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="30dp"
        android:id="@+id/expBar"
        android:progressDrawable="@drawable/bar"
        android:max="100"
        android:progress="80"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         android:text="EXP"
         android:background="#00000000"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"/>


     </RelativeLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeProgress"
        android:visibility="gone"
        >

        <Button

            android:layout_below="@id/RelativeProgress"
            android:layout_centerHorizontal="true"
            android:id="@+id/image1"
            android:visibility="visible"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:background="@mipmap/card_front"
            android:layout_weight="0.3"
            android:clickable="true"
            android:textAllCaps="false"
            android:padding="50dp"
            android:text="Quest it has this infomration that would be Greate to Have yeas I got this workingso Happey"/>

    <Button

        android:layout_marginLeft="65sp"
        android:id="@+id/image2"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:background="@mipmap/card_front"
        android:visibility="visible"
        android:clickable="true"
        android:textAllCaps="false"
        android:padding="50dp"
        android:text="Quest it has this infomration that would be Greate to Have yeas I got this workingso Happey"

    />
        <Button

            android:layout_marginLeft="150sp"
            android:id="@+id/image3"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:visibility="visible"
            android:background="@mipmap/card_front"
            android:layout_toRightOf="@id/image2"
            android:clickable="true"
            android:textAllCaps="false"
            android:padding="50dp"
            android:text="Quest it has this infomration that would be Greate to Have yeas I got this workingso Happey"/>
        />


   </FrameLayout>
    <Button
        android:visibility="invisible"
        android:text="hello"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_alignTop="@id/RelativeProgress"/>
</RelativeLayout>

    </ScrollView>